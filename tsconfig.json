{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "outDir": "dist",
        "pretty": true,
        "rootDir": "src",
        "strictNullChecks": true,
        "target": "es6"
    },
    "lib": ["es2017"],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "dangerfile.ts"
    ],
    "exclude": [
        "dangerfile.ts",
        "node_modules",
        "dist"
    ]
}
