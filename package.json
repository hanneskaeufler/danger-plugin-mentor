{
  "name": "danger-plugin-mentor",
  "description": "Level up your programming skills by getting bite-sized tips and tricks in your pull requests.",
  "author": {
    "name": "Hannes Kaeufler",
    "email": "hannes.kaeufler@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hanneskaeufler/danger-plugin-mentor.git"
  },
  "bugs": {
    "url": "https://github.com/hanneskaeufler/danger-plugin-mentor/issues"
  },
  "homepage": "https://github.com/hanneskaeufler/danger-plugin-mentor#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "learning mentor trivia"
  ],
  "version": "0.7.1",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "typedoc --out docs/ --theme minimal --exclude **/*.test.ts src/",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release",
    "prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier-write": "npm run prettier -- --write",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\"",
    "travis-deploy-once": "travis-deploy-once"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "@types/node": "^11.11.8",
    "codeclimate-test-reporter": "^0.5.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "danger": "6.1.11",
    "danger-plugin-mentor": "^0.8.0",
    "danger-plugin-yarn": "^1.2.1",
    "husky": "^1.2.0",
    "jest": "^23.4.0",
    "jest-mock-random": "^1.0.2",
    "lint-staged": "^8.0.0",
    "prettier": "^1.3.1",
    "semantic-release": "^15.10.4",
    "travis-deploy-once": "^5.0.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.4.3",
    "typedoc": "^0.14.0",
    "typescript": "^2.3.2",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {},
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "dependencies": {
    "npm": "^6.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  }
}
